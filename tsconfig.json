{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      // Map 'shared-orm' to the src of your local shared-orm project
      "shared-orm": ["../shared-orm/src"],
      "shared-orm/*": ["../shared-orm/src/*"]
    }
  },
  "include": ["src/**/*"]
}
